<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clothing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a02kylebennett.smartmart_kyle_v10.Clothing">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/Categories"
            android:layout_weight="1"
            android:id="@+id/spinner5" />

        <Button
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Search"
            android:id="@+id/button4"/>
    </LinearLayout>

    <TextView
        android:text="@string/clothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="35sp"
        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/clothing_icon"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

    <Button
        android:text="List All Firms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:onClick="All_Firms" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView2"
        android:id="@+id/HorizontalScrollView6"
        android:layout_above="@id/button9"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageButton
                    app:srcCompat="@drawable/dte"
                    android:id="@+id/imageButton"
                    android:scaleType="fitXY"
                    android:onClick="DTE"
                    android:layout_height="80dp"
                    android:layout_width="120dp" />

                <Button
                    android:text="Down To Earth"
                    android:layout_width="match_parent"
                    android:id="@+id/button6"
                    android:onClick="DTE"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="75dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageButton
                    app:srcCompat="@drawable/affinity"
                    android:id="@+id/imageButtone"
                    android:scaleType="fitXY"
                    android:onClick="Affinity"
                    android:layout_height="80dp"
                    android:layout_width="120dp" />

                <Button
                    android:text="Affinity"
                    android:layout_width="match_parent"
                    android:id="@+id/buttonu"
                    android:onClick="Affinity"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="75dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    app:srcCompat="@drawable/waybound"
                    android:id="@+id/imageButton2"
                    android:scaleType="fitXY"
                    android:layout_height="80dp"
                    android:onClick="WayBound"
                    android:layout_width="120dp" />

                <Button
                    android:text="WayBound"
                    android:layout_width="match_parent"
                    android:id="@+id/button7"
                    android:onClick="WayBound"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="75dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    app:srcCompat="@drawable/lrm"
                    android:id="@+id/imageButton3"
                    android:scaleType="fitXY"
                    android:onClick="LRM"
                    android:layout_height="80dp"
                    android:layout_width="120dp" />

                <Button
                    android:text="Luxury Resort Management"
                    android:layout_width="match_parent"
                    android:id="@+id/button8"
                    android:onClick="LRM"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="75dp"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
